#!/usr/bin/env tclsh
set testdir [file dirname $argv0]
source $testdir/tester.tcl

foreach {testnum lhs rhs ans} {  
    1   1    1     1
    2   1    2     0
    3   1    2     0
} {
  do_execsql_test int-eq-$testnum.1 "SELECT $lhs = $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1    1     0
    2   1    2     1
} {
  do_execsql_test int-neq-$testnum.1 "SELECT $lhs <> $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1    0     1
    2   1    1     0
    3   1    2     0
} {
  do_execsql_test int-gt-$testnum.1 "SELECT $lhs > $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1    0     1
    2   1    1     1
    3   1    2     0
} {
  do_execsql_test int-gte-$testnum.1 "SELECT $lhs >= $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1    0     0
    2   1    1     0
    3   1    2     1
} {
  do_execsql_test int-lt-$testnum.1 "SELECT $lhs < $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1    0     0
    2   1    1     1
    3   1    2     1
} {
  do_execsql_test int-lte-$testnum.1 "SELECT $lhs <= $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1.0    1.0     1
    2   1.0    2.0     0
} {
  do_execsql_test real-eq-$testnum.1 "SELECT $lhs = $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1.0    1.0     0
    2   1.0    2.0     1
} {
  do_execsql_test real-neq-$testnum.1 "SELECT $lhs <> $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1.0    0.0     1
    2   1.0    1.0     0
    3   1.0    2.0     0
} {
  do_execsql_test real-gt-$testnum.1 "SELECT $lhs > $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1.0    0.0     1
    2   1.0    1.0     1
    3   1.0    2.0     0
} {
  do_execsql_test real-gte-$testnum.1 "SELECT $lhs >= $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1.0    0.0     0
    2   1.0    1.0     0
    3   1.0    2.0     1
} {
  do_execsql_test real-lt-$testnum.1 "SELECT $lhs < $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   1.0    0.0     0
    2   1.0    1.0     1
    3   1.0    2.0     1
} {
  do_execsql_test real-lte-$testnum.1 "SELECT $lhs <= $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   '1'    '1'     1
    2   '1'    '2'     0
} {
  do_execsql_test text-eq-$testnum.1 "SELECT $lhs = $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   '1'    '1'     0
    2   '1'    '2'     1
} {
  do_execsql_test text-neq-$testnum.1 "SELECT $lhs <> $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   '1'    '0'     1
    2   '1'    '1'     0
    3   '1'    '2'     0
} {
  do_execsql_test text-gt-$testnum.1 "SELECT $lhs > $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   '1'    '0'     1
    2   '1'    '1'     1
    3   '1'    '2'     0
} {
  do_execsql_test text-gte-$testnum.1 "SELECT $lhs >= $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   '1'    '0'     0
    2   '1'    '1'     0
    3   '1'    '2'     1
} {
  do_execsql_test text-lt-$testnum.1 "SELECT $lhs < $rhs" $::ans
}

foreach {testnum lhs rhs ans} {  
    1   '1'    '0'     0
    2   '1'    '1'     1
    3   '1'    '2'     1
} {
  do_execsql_test text-lte-$testnum.1 "SELECT $lhs <= $rhs" $::ans
}